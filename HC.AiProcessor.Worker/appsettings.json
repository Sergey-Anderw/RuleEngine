{
  "ConnectionStrings": {
    "DBConnection": "Host=localhost;Port=5432;Database=lm-platform;Username=postgres;Password=super_db_pass;Include Error Detail=true"
  },
  "RabbitMQConnection": {
    "Scheme": "amqp",
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "Hosts": [
      {
        "Host": "localhost",
        "Port": 5672
      }
    ],
    "NetworkRecoveryInterval": "00:00:10",
    "Heartbeat": "00:01:00",
    "ConnectionTimeout": "00:00:30"
  },
  "JwtOptions": {
    "Issuer": "https://localhost:8080/auth/login",
    "Audience": "HootCore",
    "SecretKey": "secret_key",
    "TokenLifeTime": "0.00:10:00.000",
    "SessionLifeTime": "1.00:00:00.000",
    "PermanentSessionLifeTime": "365.00:00:00.000"
  },
  "EndClientConfiguration": {
    "Region": "UA",
    "Locale": "ua",
    "BrandId": "1",
    "ClientId": "1",
    "StoreId": "1"
  },
  "CapOptions": {
    "Scheme": "ai"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "System.Net.Http.HttpClient": "Warning"
    },
    "Console": {
      "FormatterName": "json",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "[yyyy-MM-dd HH:mm:ss]",
        "UseUtcTimestamp": true
      }
    }
  },
  "OpenAiSettings": {
    "ApiKey": ""
  },
  "StorageSettings": {
    "Driver": "Google",
    "Google": {
      "BucketName": "lmua-minio-qa"
    },
    "Minio": {
      "S3Connection": "s3://root:super_pass@localhost:9000"
    },
    "Local": {
      "Path": "/home/lm/bucket"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Expressions"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Diagnostics.ExceptionHandlerMiddleware": "Information",
        "System.Net.Http.HttpClient": "Warning",
        "MassTransit": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": {
            "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
            "template": "{ {TimeStamp: UtcDateTime(@t), LogEventLevel: @l, Message: @m, Exception: @x, ..@p} }\n"
          },
          "standardErrorFromLevel": "Error"
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ]
  },
  "AiProcessorQueueConfig": {
    "ExecutionRetryDurationInSeconds": 30,
    "ExecutionRetryCount": 3
  },
  "AiProcessorConfig": {
    "AiSettingsTtlInSeconds": 100
  }
}
